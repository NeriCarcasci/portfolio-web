{
	"compilerOptions": {
		"paths": {
			"@": [
				"../src/lib"
			],
			"@/*": [
				"../src/lib/*"
			],
			"$components": [
				"../src/lib/components"
			],
			"$components/*": [
				"../src/lib/components/*"
			],
			"$content": [
				"../src/lib/content"
			],
			"$content/*": [
				"../src/lib/content/*"
			],
			"$terminal": [
				"../src/lib/terminal"
			],
			"$terminal/*": [
				"../src/lib/terminal/*"
			],
			"$blog": [
				"../src/lib/blog"
			],
			"$blog/*": [
				"../src/lib/blog/*"
			],
			"$generated": [
				"../src/lib/generated"
			],
			"$generated/*": [
				"../src/lib/generated/*"
			],
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			],
			"$app/types": [
				"./types/index.d.ts"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker/**/*.js",
		"../src/service-worker.ts",
		"../src/service-worker/**/*.ts",
		"../src/service-worker.d.ts",
		"../src/service-worker/**/*.d.ts"
	]
}