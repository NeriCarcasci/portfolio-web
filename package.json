{
  "name": "portfolio-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:content && vite dev",
    "build": "npm run build:content && vite build",
    "build:content": "npx tsx scripts/build-blog-content.ts",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
