    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte": "^5.14.1",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@tabler/icons-svelte": "^3.25.0",
    "bits-ui": "^1.0.0-next.70",
    "clsx": "^2.1.1",
    "highlight.js": "^11.10.0",
    "i": "^0.3.7",
    "marked": "^15.0.0",
    "marked-highlight": "^2.2.0",
    "sharp": "^0.33.5",
    "svelte-motion": "^0.12.2",
